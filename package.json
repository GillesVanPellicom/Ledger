{
  "name": "ledger",
  "private": true,
  "version": "1.0.2",
  "type": "module",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "vite",
    "dev:expose": "vite --host",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron:dev": "concurrently \"vite\" \"wait-on tcp:5173 && cross-env NODE_ENV=development ELECTRON_START_URL=http://localhost:5173 electron . --trace-warnings\"",
    "electron:prod": "concurrently \"vite\" \"wait-on tcp:5173 && cross-env NODE_ENV=production ELECTRON_START_URL=http://localhost:5173 electron . --trace-warnings\"",
    "electron:build:win": "vite build && electron-builder --win --x64",
    "electron:build:mac": "vite build && electron-builder --mac",
    "postinstall": "electron-builder install-app-deps",
    "db:migrate": "node utils/db/migrate.js",
    "db:seed": "node utils/db/seed.js",
    "db:clear": "rm -rf datastore && mkdir datastore",
    "db:clear-and-setup": "npm run db:clear && npm run db:migrate && npm run db:seed"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.9",
    "@heroicons/react": "^2.1.3",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-tabs": "^1.1.13",
    "@tanstack/react-query": "^5.28.4",
    "chalk": "^5.4.1",
    "clsx": "^2.1.0",
    "date-fns": "^3.6.0",
    "echarts": "^5.5.0",
    "echarts-for-react": "^3.0.2",
    "jspdf": "^4.0.0",
    "jspdf-autotable": "^5.0.7",
    "lucide-react": "^0.562.0",
    "nanoid": "^5.0.7",
    "next-themes": "^0.4.6",
    "react": "^19.2.0",
    "react-datepicker": "^7.0.0-rc.2",
    "react-day-picker": "^9.13.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^7.1.5",
    "sonner": "^2.0.7",
    "sqlite3": "^5.1.7",
    "tailwind-merge": "^2.2.0",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@tanstack/react-query-devtools": "^5.28.4",
    "@types/node": "^20.12.12",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "38.0.0-beta.6",
    "electron-builder": "^25.1.8",
    "electron-devtools-installer": "^3.2.0",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "javascript-obfuscator": "^5.1.0",
    "postcss": "^8.5.1",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.4.5",
    "vite": "^7.2.4",
    "vite-plugin-javascript-obfuscator": "^3.1.0",
    "wait-on": "^8.0.2"
  },
  "build": {
    "appId": "com.ledger.app",
    "productName": "Ledger",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "asarUnpack": [
      "**/node_modules/sqlite3/**/*"
    ],
    "mac": {
      "target": "dmg",
      "minimumSystemVersion": "12.0"
    },
    "win": {
      "target": "portable"
    }
  }
}
